<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    <%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<h2>Groups</h2>

<table class='displayTable'>
	<thead>
		<tr>
			<th>id</th>
			<th>name</th>
		</tr>
	</thead>
	<tbody>
		<c:forEach var="group"  items="${allGroups}" varStatus="status"> 
			<tr>
				<td>${group.id} ${status.index}<br> <!-- usunac status.index? -->
				<a href='${pageContext.request.contextPath}/admin/panel?groupId=${group.id}&groupIndex=${status.index}'>View members</a><br>
				<a href='${pageContext.request.contextPath}/admin/panel?deleteGroupId=${group.id}'>Delete</a></td>
				<td>${group.name}</td>
			</tr>
		</c:forEach>
	</tbody>
</table>

